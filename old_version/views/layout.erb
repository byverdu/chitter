<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Chitter</title>
</head>
<body>
	<% if flash[:notice] %>
    <div id="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
	
	<% if current_user %>
		
		<h1> Welcome to Chitter <%=current_user.user_name%></h1>

		<form action="/sessions" method="post">
			<input type="hidden" name="_method" value="delete">
			<button type="submit">Sign Out</button>
		</form>

	<% end %>



	<% if flash[:errors] && !flash[:errors].empty? %>

		<p>Sorry, there were the following problems with the form</p>

		<ul class="errors">
			
			<% flash[:errors].each do |error| %>	

			<li> <%= error %> </li>
			<% end %>

		</ul>
	<% end %>

	<%= yield %>

</body>
</html>