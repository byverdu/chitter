<section class="chitters">
	<% @chitters.each do | chitt | %>
	
		<div class="chitt">
			<img src="/images/chitter.gif" alt="chitter bird">
			<ul>
				<li class="info_user"> <%= chitt.name %>  known as  <span> <%= chitt.user_name %> </span> </li>
				<li class="info_chit"> <%= chitt.content %> <span>Chitted at <%= format_time(chitt.at_time)%> </span> </li>
			</ul>
		</div>
	<% end %>	

</section>
