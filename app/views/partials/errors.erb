<section class="errors_box">
	<% if flash[:errors] && !flash[:errors].empty? %>
	  Sorry, there were the following problems with the form.
	  <ul class="messages errors">
	    <% flash[:errors].each do |error| %>
	      <li><%= error %></li>
	    <% end %>
	  </ul>
	<% end %>

	<% if flash[:notice]  %>
		<span class="messages"> <%= flash[:notice] %> </span>
	<% end %>
</section>